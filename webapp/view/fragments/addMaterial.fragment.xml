<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="addMaterial" title="Add Material" class="sapUiResponsiveMargin sapUiPopupWithPadding" 
		icon="sap-icon://add" contentHeight="30%" contentWidth="20%">
		<content>
			<HBox>
				<VBox>
					<Input id="material" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="Enter Material" />
					<Input id="quantity" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="Enter Quantity"/>
					<Input id="unit" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="Enter Unit"/>
				</VBox>
			</HBox>
		</content>
		<beginButton>
			<Button text = "Save" press="onMatSave"/>
		</beginButton>
		<endButton>
			<Button text = "Cancel" press="onMatCancel"/>
		</endButton>		
	</Dialog>
</core:FragmentDefinition>